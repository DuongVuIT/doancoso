        <div class="title">Visitor</div>
    </div>

</div>

<div class="row-fluid">
   
    <div class="span8 widget blue" onTablet="span7" onDesktop="span8">
        <canvas id="orderChart" style="width:30%" height="180"></canvas>
    </div>
    <script>
    $(document).ready(function () {
        $.ajax({
            url: '@Url.Action("GetOrderStatistics", "Admin")',
            type: 'GET',
            dataType: 'json',
            success: function (data) {
                console.log(data)
                var monthLabels = data.map(function (item) {
                    return item.Month;
                });

                var countData = data.map(function (item) {
                    return item.Count;
                });

                var ctx = document.getElementById('orderChart').getContext('2d');
                var chart = new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: monthLabels,
                        datasets: [{
                            label: 'Order Count',
                            data: countData,
                            backgroundColor: 'green',
                            borderColor: 'white',
                            borderWidth: 1
                        }]
                    },
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true,
                                stepSize: 1
                            }
                        }
                    }
                });
            },
            error: function (error) {
                console.log(error);
            }
        });
    });
    </script>


    <div class="sparkLineStats span4 widget green" onTablet="span5" onDesktop="span4">

        <ul class="unstyled">

            <li>
                <span class="sparkLineStats3"></span>
