@model IEnumerable<VuDaiDuong_8627_DoAnCoSo.Models.Product>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="row-fluid sortable">
    <div class="box span12">
        <div class="box-header">
            <h2><i class="halflings-icon align-justify"></i><span class="break"></span>List Products</h2>
            <div class="box-icon">
                <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
            </div>
        </div>

        <div class="box-content">

            <table class="table table-bordered table-striped table-condensed">

                <thead>

                    <tr>

                        <th class="left">
                            <a class="btn btn-success" onclick="location.href='@Url.Action("Create")'">
                                <i class="halflings-icon plus-sign"></i>
                            </a>

                        </th>

                    </tr>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Image)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Price)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Des)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Quantity)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Date)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Category.CategoryName)
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                <div><img src="@Url.Content("~/Images/"+item.Image)" width="80" height="60" /></div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Des)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Category.CategoryName)
                            </td>
                           
                            <td class="center">
                                <a class="btn btn-success" onclick="location.href='@Url.Action("Details", new { id = item.IdProduct })'"><i class="halflings-icon white zoom-in"></i></a>
                                <a class="btn btn-info" onclick="location.href='@Url.Action("Edit", new { id = item.IdProduct })'"><i class="halflings-icon white edit"></i></a>
                                <a class="btn btn-danger" onclick="location.href='@Url.Action("Delete", new { id = item.IdProduct })'"><i class="halflings-icon white trash"></i></a>

                            </td>
                        </tr>

                    }


                </tbody>
            </table>

        </div>
    </div><!--/span-->
</div><!--/row-->