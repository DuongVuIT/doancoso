@model VuDaiDuong_8627_DoAnCoSo.Models.OrderDetail

@{
    ViewBag.Title = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{
    <div class="row-fluid sortable">
        <div class="box span12">
            <div class="box-header">
                <h2><i class="halflings-icon align-justify"></i><span class="break"></span>Details</h2>
                <div class="box-icon">
                    <a href="#" class="btn-setting"><i class="halflings-icon wrench"></i></a>
                    <a href="#" class="btn-minimize"><i class="halflings-icon chevron-up"></i></a>
                    <a href="#" class="btn-close"><i class="halflings-icon remove"></i></a>
                </div>
            </div>

            <div class="box-content">

                <table class="table table-bordered table-striped table-condensed">

                    <thead>

                        <tr>
                            <th>@Html.DisplayNameFor(model => model.ProductName)</th>
                            <th>@Html.DisplayNameFor(model => model.Price)</th>
                            <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                            <th>@Html.DisplayNameFor(model => model.Total)</th>
                            <th>@Html.DisplayNameFor(model => model.Product.Name)</th>
                            <th>@Html.DisplayNameFor(model => model.Order.Name)</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>@Html.DisplayFor(model => model.ProductName)</td>

                            <td>@Html.Raw(Model.Price.ToString("N0"))</td>
                            <td>@Html.DisplayFor(model => model.Quantity)</td>
                            <td>@Html.Raw(Model.Total.ToString("N0"))</td>
                            <td>@Html.DisplayFor(model => model.Product.Name)</td>
                            <td>@Html.DisplayFor(model => model.Order.Name)</td>
                            <td class="center">
                                <a href="@Url.Action("Index", "Product")" class="btn btn-success">Back to list</a>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">The product you are trying to view details does not exist.</div>
    <a href="@Url.Action("Index", "Order")" class="btn btn-success">Back to list</a>
}
